<?xml version="1.0"?>
<robot name="slatol" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="base_size" value="0.2" />
  <xacro:property name="L1" value="0.35" /> 
  <xacro:property name="L2" value="0.35" />
  <xacro:property name="link_radius" value="0.03" />

  <material name="Red"><color rgba="0.8 0 0 1"/></material>
  <material name="Blue"><color rgba="0 0 0.8 1"/></material>
  <material name="Black"><color rgba="0 0 0 1"/></material>
  <material name="Grey"><color rgba="0.5 0.5 0.5 0.5"/></material>

  <link name="world"/>

  <joint name="world_slide_x" type="prismatic">
    <parent link="world"/>
    <child link="virtual_rail_x"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-100" upper="100" effort="20000" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="virtual_rail_x">
    <visual>
        <geometry><box size="5.0 0.05 0.05"/></geometry>
        <material name="Grey"/>
    </visual>
    <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="world_slide_z" type="prismatic">
    <parent link="virtual_rail_x"/>
    <child link="virtual_rail_z"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="50" effort="20000" velocity="100"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="virtual_rail_z">
    <visual>
        <geometry><box size="0.05 0.05 2.0"/></geometry>
        <material name="Grey"/>
    </visual>
    <inertial>
        <mass value="2.0"/>
        <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="boom_pitch" type="revolute">
    <parent link="virtual_rail_z"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-6.28" upper="6.28" effort="1000" velocity="50"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <link name="base_link">
    <visual><geometry><box size="${base_size} ${base_size} ${base_size}" /></geometry><material name="Red"/></visual>
    <collision><geometry><box size="${base_size} ${base_size} ${base_size}" /></geometry></collision>
    <inertial><mass value="5.0"/><inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>

  <joint name="hip_haa_joint" type="revolute">
    <parent link="base_link"/>
    <child link="abduction_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.0" upper="0.0" effort="1000" velocity="0"/> 
  </joint>
  
  <link name="abduction_link">
    <visual><geometry><cylinder length="0.05" radius="${link_radius}"/></geometry><material name="Blue"/></visual>
    <inertial><mass value="0.2"/><inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>

  <joint name="hip_hfe_joint" type="revolute">
    <parent link="abduction_link"/>
    <child link="thigh_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100.0" velocity="10.0"/>
  </joint>
  
  <link name="thigh_link">
    <visual><geometry><cylinder length="${L1}" radius="${link_radius}"/></geometry><origin xyz="0 0 ${-L1/2}" rpy="0 0 0"/><material name="Grey"/></visual>
    <collision><geometry><cylinder length="${L1}" radius="${link_radius}"/></geometry><origin xyz="0 0 ${-L1/2}" rpy="0 0 0"/></collision>
    <inertial><mass value="1.0"/><inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>
  
  <joint name="knee_kfe_joint" type="revolute">
    <parent link="thigh_link"/>
    <child link="calf_link"/>
    <origin xyz="0 0 ${-L1}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.6" upper="0.0" effort="100.0" velocity="10.0"/>
  </joint>
  
  <link name="calf_link">
    <visual><geometry><cylinder length="${L2}" radius="${link_radius}"/></geometry><origin xyz="0 0 ${-L2/2}" rpy="0 0 0"/><material name="Black"/></visual>
    <collision><geometry><cylinder length="${L2}" radius="${link_radius}"/></geometry><origin xyz="0 0 ${-L2/2}" rpy="0 0 0"/></collision>
    <inertial><mass value="1.0"/><inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>

  <joint name="foot_fixed_joint" type="fixed">
    <parent link="calf_link"/>
    <child link="foot_link"/>
    <origin xyz="0 0 ${-L2}" rpy="0 0 0"/>
  </joint>
  
  <link name="foot_link">
     <visual><geometry><sphere radius="0.04"/></geometry><material name="Red"/></visual>
     <collision><geometry><sphere radius="0.04"/></geometry></collision>
     <surface><friction><ode><mu>10.0</mu><mu2>10.0</mu2></ode></friction></surface>
     <inertial><mass value="0.1"/><inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/></inertial>
  </link>

  <ros2_control name="IgnitionSystem" type="system">
    <hardware><plugin>ign_ros2_control/IgnitionSystem</plugin></hardware>
    <joint name="hip_haa_joint"><command_interface name="position"/><state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="hip_hfe_joint"><command_interface name="position"/><state_interface name="position"/><state_interface name="velocity"/></joint>
    <joint name="knee_kfe_joint"><command_interface name="position"/><state_interface name="position"/><state_interface name="velocity"/></joint>
  </ros2_control>

  <gazebo>
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>$(find slatol3d_description)/config/slatol_controllers.yaml</parameters>
    </plugin>
  </gazebo>
</robot>